{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/plan.schema.json",
  "title": "lex-pr plan schema v1",
  "description": "Schema for plan.json files - generated from Zod schema in src/schema.ts",
  "$ref": "#/definitions/Plan",
  "definitions": {
    "Plan": {
      "type": "object",
      "properties": {
        "schemaVersion": {
          "type": "string",
          "pattern": "^1\\.\\d+\\.\\d+$"
        },
        "target": {
          "type": "string",
          "default": "main"
        },
        "policy": {
          "type": "object",
          "properties": {
            "requiredGates": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            },
            "optionalGates": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            },
            "maxWorkers": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            },
            "retries": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "maxAttempts": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 1
                  },
                  "backoffSeconds": {
                    "type": "number",
                    "minimum": 0,
                    "default": 0
                  }
                },
                "additionalProperties": false
              },
              "default": {}
            },
            "overrides": {
              "type": "object",
              "properties": {
                "adminGreen": {
                  "type": "object",
                  "properties": {
                    "allowedUsers": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "requireReason": {
                      "type": "boolean",
                      "default": false
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false,
              "default": {}
            },
            "blockOn": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            },
            "mergeRule": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "strict-required"
                  ],
                  "default": "strict-required"
                }
              },
              "additionalProperties": false,
              "default": {
                "type": "strict-required"
              }
            }
          },
          "additionalProperties": false
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "deps": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "gates": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "run": {
                      "type": "string"
                    },
                    "cwd": {
                      "type": "string"
                    },
                    "env": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "string"
                      },
                      "default": {}
                    },
                    "runtime": {
                      "type": "string",
                      "enum": [
                        "local",
                        "container",
                        "ci-service"
                      ],
                      "default": "local"
                    },
                    "container": {
                      "type": "object",
                      "properties": {
                        "image": {
                          "type": "string"
                        },
                        "entrypoint": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "mounts": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "source": {
                                "type": "string"
                              },
                              "target": {
                                "type": "string"
                              },
                              "type": {
                                "type": "string",
                                "enum": [
                                  "bind",
                                  "volume"
                                ],
                                "default": "bind"
                              }
                            },
                            "required": [
                              "source",
                              "target"
                            ],
                            "additionalProperties": false
                          }
                        }
                      },
                      "required": [
                        "image"
                      ],
                      "additionalProperties": false
                    },
                    "artifacts": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "default": []
                    }
                  },
                  "required": [
                    "name",
                    "run"
                  ],
                  "additionalProperties": false
                },
                "default": []
              }
            },
            "required": [
              "name"
            ],
            "additionalProperties": false
          },
          "default": []
        }
      },
      "required": [
        "schemaVersion"
      ],
      "additionalProperties": false
    }
  }
}